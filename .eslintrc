{
    "extends": [
        "eslint",
        "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "plugins": [
        "jsdoc"
    ],
    "rules": {
        "camelcase": [
            "error",
            {
                "properties": "never"
            }
        ],
        "new-cap": [
            "error",
            {
                "capIsNew": false
            }
        ],
        "padding-line-between-statements": "off",
        "prefer-template": "off",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "eqeqeq": "off",
        "func-style": [
            "error",
            "declaration",
            {
                "allowArrowFunctions": true
            }
        ],
        "arrow-parens": "off"
    }
}