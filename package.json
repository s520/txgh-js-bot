{
  "name": "txgh-js-bot",
  "version": "1.0.0",
  "description": "When a push event occurs, upload the source file to Transifex and commit the translation file to GitHub.",
  "author": "s520 <sony.pcv.s520@gmail.com> (https://github.com/s520)",
  "license": "ISC",
  "repository": "https://github.com//txgh-js-bot.git",
  "homepage": "https://github.com//txgh-js-bot",
  "bugs": "https://github.com//txgh-js-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "nock": "^10.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
